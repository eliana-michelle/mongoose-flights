<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://fonts.googleapis.com/css?family=Coiny|Work+Sans" rel="stylesheet">    <title>Flights</title>
</head>
<body>
    <nav>
        <a class ='nav' href = "/flights">ALL FLIGHTS</a>
        <a class = 'nav' href ="flights/new">ADD FLIGHT</a>
    </nav>
    <h1>FLIGHTS</h1>
    <table>
        <thead>
            <th>AIRPORT</th>
            <th>AIRLINE</th>
            <th>FLIGHT NO</th>
            <th>DEPARTURE DATE & TIME</th>
            <th>MORE DETAILS</th>
        </thead>
        <tbody>
            <% flights.forEach(function(f){ %>
            <tr>
                <td><%= f.airport %></td>
                <td><%= f.airline %></td>
                <td><%= f.flightNo %></td>
                <% if(f.departs < new Date ()){ %>
                    <td class = "passed"><%= f.departs %></td>
                <% } else { %>
                    <td><%=f.departs%></td>
                <% } %>   
                <td>
                    <a href = 'flights/<%= f._id %>'> Click for More Details
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <a class = 'button' href = "flights/new">Add New Flight</a>
</body>
</html>